{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PR",
            "type": "shell",
            "command": "make pr",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Lint",
                "Test",
                "Static type check",
            ],
            "presentation": {
                "reveal": "always",
                "clear": true,
                "showReuseMessage": false,
                "group": "pr"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "make lint",
            "presentation": {
                "reveal": "always",
                "clear": true,
                "showReuseMessage": false,
                "group": "pr"
            },
            "problemMatcher": []
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "make test-with-coverage",
            "presentation": {
                "reveal": "always",
                "clear": true,
                "showReuseMessage": false,
                "group": "pr"
            },
        },
        {
            "label": "Static type check",
            "type": "shell",
            "command": "make types",
            "presentation": {
                "reveal": "always",
                "clear": true,
                "showReuseMessage": false,
                "group": "pr"
            }
        }
    ]
}